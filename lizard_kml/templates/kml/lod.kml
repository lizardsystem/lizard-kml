<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2" xmlns:gx="http://www.google.com/kml/ext/2.2" xmlns:kml="http://www.opengis.net/kml/2.2" xmlns:atom="http://www.w3.org/2005/Atom">
  <Document>
    <name>lod.kml</name>
    <open>1</open>
    <NetworkLink>
      <name>Nederland</name>
      <Region>
	<LatLonAltBox>
	  <north>55</north>
	  <south>51</south>
	  <east>1</east>
	  <west>6</west>
	  <minAltitude>-50</minAltitude>
	  <maxAltitude>50</maxAltitude>
	  <altitudeMode>absolute</altitudeMode>
	</LatLonAltBox>
	<Lod>
	  <minLodPixels>128</minLodPixels>
	  <maxLodPixels>1024</maxLodPixels>
	</Lod>
      </Region>
      <Link>
	<href>//kml/kml/overview</href>
	<viewRefreshMode>onRegion</viewRefreshMode>
      </Link>
    </NetworkLink>
    <Folder>
      {% for line in lines %}
      <NetworkLink>
	<name>Transect {{ line.id }} </name>
	<Region>
	  <LatLonAltBox>
	    <north>{{ line.bbox.north }} </north>
	    <south>{{ line.bbox.south }} </south>
	    <east>{{ line.bbox.east }}</east>
	    <west>{{ line.bbox.west }}</west>
	    <minAltitude>0</minAltitude>
	    <maxAltitude>50</maxAltitude>
	    <altitudeMode>absolute</altitudeMode>
	  </LatLonAltBox>
	  <Lod>
	    <minLodPixels>128</minLodPixels>
	  </Lod>
	</Region>
	<Link>
	  <href>http://localhost:8000/kml/kml/transect/{{ line.id }}</href>
	  <viewRefreshMode>onRegion</viewRefreshMode>
	</Link>
      </NetworkLink>
      <Placemark>
	<name>Transect {{ line.id }} </name>
	<LineString>
	  <coordinates>
	    {{ line.coordinates }}
	  </coordinates>
	</LineString>
      </Placemark>
      {% endfor %}
    </Folder>

  </Document>
</kml>
